@model SocialMedia.WebMVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Register to Social Media";
}

<section class="register-page">
    <nav class="register-page-nav">
        <ul>
            <li class="brand">
                <i class="fas fa-home"></i>
                @Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "home-btn" })
            </li>
            <li>@Html.ActionLink("About", "About", "Home")</li>
        </ul>
    </nav>

    <div class="register">
        <div class="register-content">
            <h2>@ViewBag.Title</h2>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "register-form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "register-user-info", @placeholder = "Email" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "register-user-info", @placeholder = "User Name" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "register-password", @placeholder = "Password" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "register-confirm-password", @placeholder = "Confirm Password" })
                </div>
                <button type="submit" class="register-form-btn">Register</button>
                <footer class="register-footer">
                    <p>Already have an Account? @Html.ActionLink("Log In Now", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "login-link"})</p>
                </footer>
            }
        </div>
    </div>
</section>












