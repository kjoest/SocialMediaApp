@using SocialMedia.WebMVC.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log In to Social Media";
}

<section class="login-page">
    <nav class="login-page-nav">
        <ul>
            <li class="brand">
                <i class="fas fa-home"></i>
                @Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "home-btn" })
            </li>
            <li>@Html.ActionLink("About", "About", "Home")</li>
        </ul>
    </nav>

    <div class="login">
        <div class="login-content">
            <h2>@ViewBag.Title</h2>
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "login-user-info", @placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "login-password", @placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div>
                    <button type="submit" class="login-form-btn">Log In</button>
                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "login-form-checkbox"})
                    @Html.LabelFor(m => m.RememberMe)
                    @Html.ActionLink("Forgot Password?", "ForgotPassword", "Account")
                </div>
                <footer class="login-footer">
                    <p>New to Social Media? @Html.ActionLink("Sign Up Now", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</p>
                </footer>
            }
        </div>
    </div>
</section>























